<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityCapa"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/fundo" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_marginStart="800dp"
        android:layout_marginTop="-10dp"
        app:srcCompat="@drawable/crianca" />

    <EditText
        android:id="@+id/login_email"
        style="@style/CustomEditTextStyle"
        android:layout_width="700dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="400dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_background"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:padding="15dp"/>

    <EditText
        android:id="@+id/login_password"
        style="@style/CustomEditTextStyle"
        android:layout_width="700dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="470dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_background"
        android:hint="Senha"
        android:inputType="textPassword"
        android:padding="15dp"/>

    <Button
        android:id="@+id/botaoLogin"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="540dp"
        android:text="Login"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        app:cornerRadius="20dp" />

    <TextView
        android:id="@+id/textoBemVindo"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/texto"
        android:gravity="center"
        android:text="Bem-vindo\nao TEAlink"
        android:textColor="#1A2F5A"
        android:textSize="100sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/ref"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="300dp"
        android:fontFamily=""
        android:gravity="center"
        android:text="O autismo não é um erro de processamento. É um sistema operacional diferente."
        android:textColor="#1A2F5A"
        android:textSize="20sp"
        android:textStyle="bold" />


</FrameLayout>
