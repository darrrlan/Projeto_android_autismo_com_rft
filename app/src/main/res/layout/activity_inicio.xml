<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ActivityInicio"
    tools:ignore="ExtraText">

    <!-- Fundo -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/todo"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/fundo" />

    <!-- Ilustração da criança -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_marginStart="800dp"
        android:layout_marginTop="-10dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/crianca_2" />

    <!-- Texto de boas-vindas -->
    <TextView
        android:id="@+id/texto_intro"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Pronto para explorar?\n Aqui está o menu!"
        android:textColor="#1A2F5A"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!-- Botão Questionário -->
    <LinearLayout
        android:id="@+id/botaoQuestionario"
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/bg_botao_questionario"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/prancheta"
            android:contentDescription="Ícone de questionário"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Questionário"
            android:textColor="#0A2647"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Botão Cadastro -->
    <LinearLayout
        android:id="@+id/botaoCadastro"
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/bg_botao_cadastro"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/cadastro"
            android:contentDescription="Ícone de cadastro" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Cadastro"
            android:textColor="#0A2647"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Botão Respostas Salvas -->
    <LinearLayout
        android:id="@+id/botaoRespostasSalvas"
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="510dp"
        android:background="@drawable/bg_botao_respostas"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/resp_salva"
            android:contentDescription="Ícone de respostas salvas" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Respostas Salvas"
            android:textColor="#0A2647"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>
